# ==============================================
# FOREX FACTORY BOT - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ----------------------------------------------
# DATABASE
# ----------------------------------------------
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/forex_bot"

# Direct URL for migrations (can be same as DATABASE_URL)
DIRECT_URL="postgresql://postgres:password@localhost:5432/forex_bot"

# ----------------------------------------------
# DISCORD BOT
# ----------------------------------------------
# Get these from: https://discord.com/developers/applications
DISCORD_TOKEN="your-discord-bot-token-here"
DISCORD_CLIENT_ID="your-discord-client-id-here"
DISCORD_CLIENT_SECRET="your-discord-client-secret-here"

# ----------------------------------------------
# AUTHENTICATION (Better Auth)
# ----------------------------------------------
# Generate a random secret key (min 32 characters)
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET="your-better-auth-secret-key-here-min-32-chars"

# Your application URL (server-side)
# Development: http://localhost:3000
# Production: https://yourdomain.com
BETTER_AUTH_URL="http://localhost:3000"

# Your application URL (client-side - must be prefixed with NEXT_PUBLIC_)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# ----------------------------------------------
# RABBITMQ (Optional - for scheduler)
# ----------------------------------------------
# Full connection URL (recommended)
RABBITMQ_URL="amqp://guest:guest@localhost:5672"

# OR individual settings
RABBITMQ_HOST="localhost"
RABBITMQ_PORT="5672"
RABBITMQ_USER="guest"
RABBITMQ_PASS="guest"

# ----------------------------------------------
# ENVIRONMENT
# ----------------------------------------------
# Options: development | test | production
NODE_ENV="development"

# ----------------------------------------------
# OPTIONAL
# ----------------------------------------------
# Skip environment validation (not recommended)
# SKIP_ENV_VALIDATION=true

